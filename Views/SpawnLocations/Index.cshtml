@model IEnumerable<Final_Project_Backend.Models.SpawnLocations>

@{
    ViewData["Title"] = "Index";
}

<h1 class="crud-page-title">Spawn Locations</h1>

<p>
    <a asp-action="Create" class="create-link">+ Create New</a>
</p>
<table class="table custom-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpawnType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XCoordinate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YCoordinate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Environment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpawnType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.XCoordinate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YCoordinate)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Scale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Animal.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Environment.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpawnLocationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpawnLocationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SpawnLocationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
