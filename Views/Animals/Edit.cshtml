@model Final_Project_Backend.Models.Animals

@{
    ViewData["Title"] = "Edit";
}

<h1 class="crud-page-title">Edit</h1>

<h4 class="crud-page-subtitle">Animals</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnimalId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaoriName" class="control-label"></label>
                <input asp-for="MaoriName" class="form-control" />
                <span asp-validation-for="MaoriName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScientificName" class="control-label"></label>
                <input asp-for="ScientificName" class="form-control" />
                <span asp-validation-for="ScientificName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AverageSize" class="control-label"></label>
                <input asp-for="AverageSize" class="form-control" />
                <span asp-validation-for="AverageSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Habitat" class="control-label"></label>
                <input asp-for="Habitat" class="form-control" />
                <span asp-validation-for="Habitat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diet" class="control-label"></label>
                <input asp-for="Diet" class="form-control" />
                <span asp-validation-for="Diet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Origin" class="control-label"></label>
                <input asp-for="Origin" class="form-control" />
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Current image</label>
                @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                {
                    <div>
                        <img src="@(Url.Content("~/img/animals/" + Model.ImageUrl))" alt="animal image" style="max-width:200px;max-height:200px;" />
                    </div>
                }
                <label class="control-label">Replace image (optional)</label>
                <input type="file" name="imageFile" accept="image/*" class="form-control-file" />
                <small class="form-text text-muted">Upload a new image to replace existing. Stored at wwwroot/img/animals</small>
            </div>
            <div class="form-group">
                <label asp-for="EnvironmentId" class="control-label"></label>
                <select asp-for="EnvironmentId" class="form-control" asp-items="ViewBag.EnvironmentId"></select>
                <span asp-validation-for="EnvironmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Spawn Locations</label>
                <select asp-items="ViewBag.SpawnLocationIds" name="selectedSpawnIds" multiple="multiple" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
