@model Final_Project_Backend.Models.Environments

@{
    ViewData["Title"] = "Edit";
}

<h1 class="crud-page-title">Edit</h1>

<h4 class="crud-page-subtitle">Environments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EnvironmentId" />
            <div class="form-group crud-input">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group crud-input">
                <label asp-for="NavigationIcon" class="control-label"></label>
                <input asp-for="NavigationIcon" class="form-control" />
                <span asp-validation-for="NavigationIcon" class="text-danger"></span>
            </div>
            <div class="form-group crud-input">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group crud-submit">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="crud-link">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
