@model IEnumerable<Final_Project_Backend.Models.Achievements>

@{
    ViewData["Title"] = "Index";
}

<h1 class="crud-page-title">Achievements</h1>

<p>
    <a asp-action="Create" class="create-link">+ Create New</a>
</p>
<table class="table custom-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IconUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IconUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AchievementId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AchievementId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AchievementId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
